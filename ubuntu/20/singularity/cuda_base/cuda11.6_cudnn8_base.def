BootStrap: docker
From: nvidia/cuda:11.6.2-cudnn8-devel-ubuntu20.04

%files
90-environment.sh      /opt

%post
export TERM=xterm
export DEBIAN_FRONTEND=noninteractive
apt-get update && \
apt-get install -y \
  apt-transport-https \
  apt-utils && \
apt-mark unhold \
  cuda-toolkit-11-4 \
  cuda-libraries-11-4 \
  cuda-libraries-dev-11-4 \
  cuda-nvml-dev-11-4 \
  libcublas-11-4 \
  libcublas-dev-11-4 \
  libnccl-dev \
  libnccl2 && \
apt-get upgrade -y && \
ln -snf /usr/share/zoneinfo/Asia/Singapore /etc/localtime && \
echo Asia/Singapore > /etc/timezone && \
TZ=Asia/Singapore apt install -y tzdata && \
apt-get install -y \
  cuda-toolkit-11-4 \
  cuda-nvml-dev-11-4 && \
apt-mark hold \
  cuda-toolkit-11-4 \
  cuda-libraries-11-4 \
  cuda-libraries-dev-11-4 \
  cuda-nvml-dev-11-4 \
  libcublas-11-4 \
  libcublas-dev-11-4 \
  libnccl-dev \
  libnccl2 && \
rm -f /.singularity.d/env/90-environment.sh && \
mv /opt/90-environment.sh /.singularity.d/env/90-environment.sh && \
rm -rf \
  /var/lib/apt/lists/*
