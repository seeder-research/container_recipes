BootStrap: localimage
From: pre.sif

%files
debian-equivs-2020-ex.txt    /opt

%post
export DEBIAN_FRONTEND=noninteractive
export TERM=xterm
cd /opt && \
wget --no-check-certificate \
  https://www.tug.org/texlive/files/debian-equivs-2020-ex.txt && \
apt update && \
apt-get install --no-install-recommends -y \
  evince \
  equivs && \
mkdir /opt/tl-equivs && \
cd /opt/tl-equivs && \
mv /opt/debian-equivs-2020-ex.txt \
  /opt/tl-equivs/texlive-local && \
equivs-build texlive-local && \
dpkg -i texlive-local_2020-1_all.deb && \
apt-get install -f && \
apt-get autoremove -y && \
apt-get autoclean && \
rm -rf \
  /opt/tl-equivs \
  /var/lib/apt/lists/*
