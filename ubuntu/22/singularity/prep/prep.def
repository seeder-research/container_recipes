BootStrap: localimage
From: pre.sif

%post
export TERM=xterm
export DEBIAN_FRONTEND=noninteractive
apt-get update && \
apt-get install -y \
  apt-transport-https \
  apt-utils && \
apt-get upgrade -y && \
ln -snf /usr/share/zoneinfo/Asia/Singapore /etc/localtime && \
echo Asia/Singapore > /etc/timezone && \
TZ=Asia/Singapore apt install -y tzdata && \
apt-get install -y --no-install-recommends \
  ca-certificates \
  gnupg \
  software-properties-common \
  wget
rm -rf /etc/apt/sources.list.d/pgdg.list \
  /etc/apt/sources.list.d/kitware.list \
  /usr/share/keyrings/pgdg-archive-keyring.gpg \
  /usr/share/keyrings/kitware-archive-keyring.gpg && \
wget -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc 2>/dev/null | gpg --dearmor - | tee /usr/share/keyrings/pgdg-archive-keyring.gpg >/dev/null
wget -O - https://apt.kitware.com/keys/kitware-archive-latest.asc 2>/dev/null | gpg --dearmor - | tee /usr/share/keyrings/kitware-archive-keyring.gpg >/dev/null
sh -c 'echo "deb [signed-by=/usr/share/keyrings/pgdg-archive-keyring.gpg] http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list' && \
sh -c 'echo "deb [signed-by=/usr/share/keyrings/kitware-archive-keyring.gpg] http://apt.kitware.com/ubuntu $(lsb_release -cs) main" > /etc/apt/sources.list.d/kitware.list' && \
