BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE=/usr/local
export APPSDIR=${HOME_BASE}/utils
export APPVER_MAJ=15
export APPVER_MIN=0
export APPVER_PATCH=2
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPNAME="llvm"
export APPURL="https://github.com/llvm/llvm-project"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/utils
if [ ! -d ${MOD_BASE}/${APPNAME} ]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    if [ -f ${MOD_DIR}/modfile ]; then
        mv ${MOD_DIR}/modfile \
            ${MOD_BASE}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
if [ -f ${MOD_DIR}/modfile ]; then
  rm -f ${MOD_DIR}/modfile
fi
cd ${APPSDIR}/${APPNAME} && \
git clone --recursive \
  ${APPURL} \
  -b llvmorg-${APPVER} \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} && \
mkdir -p \
  ${APPSDIR}/${APPNAME}/builddir && \
cmake -S ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} \
  -B ${APPSDIR}/${APPNAME}/builddir \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE="Release" \
  -DCMAKE_CXX_COMPILER=$(which g++) \
  -DCMAKE_C_COMPILER=$(which gcc) \
  -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra;flang;libclc;lld;lldb;mlir;openmp;polly;pstl" \
  -DLLVM_ENABLE_RUNTIMES="libcxx;libcxxabi;libunwind;compiler-rt" \
  -DLLVM_ENABLE_RTTI=ON \
  -DLLVM_BUILD_LLVM_DYLIB=ON && \
cd ${APPSDIR}/${APPNAME} && \
cmake \
  --build ${APPSDIR}/${APPNAME}/builddir \
  -j$(nproc) \
  -t install && \
cd ${APPSDIR}/${APPNAME} && \
rm -rf \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} \
  ${APPSDIR}/${APPNAME}/builddir
