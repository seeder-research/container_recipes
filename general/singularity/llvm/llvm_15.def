BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=15
export APPVER_MIN=0
export APPVER_PATCH=2
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}"
export APPNAME="llvm"
export APPURL="https://github.com/llvm/llvm-project"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export SRCDIR="/opt"
export MODDIR="/usr/local/modulefiles/dev"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  -b llvmorg-${APPVER} \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
mkdir -p \
  ${SRCDIR}/builddir && \
cmake -S ${SRCDIR}/${APPNAME}-${APPVER} \
  -B ${SRCDIR}/builddir \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE="Release" \
  -DCMAKE_CXX_COMPILER="$(which g++)" \
  -DCMAKE_C_COMPILER="$(which gcc)" \
  -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra;flang;libclc;lld;lldb;mlir;openmp;polly;pstl" \
  -DLLVM_ENABLE_RUNTIMES="libcxx;libcxxabi;libunwind;compiler-rt" \
  -DLLVM_ENABLE_RTTI=ON \
  -DLLVM_BUILD_LLVM_DYLIB=ON && \
cd ${SRCDIR} && \
cmake \
  --build ${SRCDIR}/builddir \
  -j$(nproc) \
  --target install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-${APPVER} \
  ${SRCDIR}/builddir
