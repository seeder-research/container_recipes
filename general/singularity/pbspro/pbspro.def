BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
export HOME_BASE=/usr/local
export MODDIR=/usr/local
export APPNAME=pbspro
export APPVER_MAJ=22
export APPVER_MIN=05
export APPVER_REV=11
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPDIR=/opt
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export APPURL="https://github.com/openpbs/openpbs"
if [ ! -d ${MODDIR}/modulefiles/dev/${APPNAME} ]; then
    mkdir -p ${MODDIR}/modulefiles/dev/${APPNAME}
fi
if [ ! -f ${MODDIR}/modulefiles/dev/${APPNAME}/${APPVER} ]; then
    if [ -f ${APPDIR}/modfile ]; then
        mv ${APPDIR}/modfile \
            ${MODDIR}/modulefiles/dev/${APPNAME}/${APPVER}
    fi
fi
if [ -f ${APPDIR}/modfile ]; then
    rm -f ${APPDIR}/modfile
fi
if [ ! -f ${MODDIR}/modulefiles/dev/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/modulefiles/dev/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MODDIR}/modulefiles/dev/${APPNAME}/.version
fi
cd ${APPDIR} && \
git clone \
  --recursive \
  ${APPURL} \
  -b v${APPVER} \
  ${APPDIR}/${APPNAME}-${APPVER} && \
cd ${APPDIR}/${APPNAME}-${APPVER} && \
./autogen.sh && \
./configure \
  --prefix=${APPROOT} \
  --with-pbs-server-home=/opt/pbspro/v${APPVER}/spool && \
make -j$(nproc) && \
make install && \
cd ${APPDIR} && \
rm -rf \
  ${APPDIR}/${APPNAME}-${APPVER}
