BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=4
export APPVER_REV=3
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}"
export APPURL="https://github.com/PDAL/PDAL"
export APPNAME="pdal"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/dev"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
if [ ! -d ${SRCDIR}/builddir ]; then
    mkdir -p ${SRCDIR}/builddir
else
    rm -rf ${SRCDIR}/builddir && \
    mkdir -p ${SRCDIR}/builddir
fi
if [ -f ${SRCDIR}/modfile ]; then
  rm -f ${SRCDIR}/modfile
fi
module load \
  libgeotiff \
  gdal && \
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  -b ${APPVER} \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
cd ${SRCDIR}/builddir && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_C_COMPILER=$(which gcc) \
  -DCMAKE_CXX_COMPILER=$(which g++) \
  -DCMAKE_EXE_LINKER_FLAGS="-L${SQLITE3_ROOT}/lib -lsqlite3" \
  -DGDAL_INCLUDE_DIR=${GDAL_ROOT}/include \
  -DGDAL_LIBRARY=${GDAL_ROOT}/lib/libgdal.so \
  -DGEOTIFF_INCLUDE_DIR=${LIBGEOTIFF_ROOT}/include \
  -DGEOTIFF_LIBRARY=${LIBGEOTIFF_ROOT}/lib/libgeotiff.so \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
cmake \
  --build . \
  -j$(nproc) \
  -t install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/builddir \
  ${SRCDIR}/${APPNAME}-${APPVER}
