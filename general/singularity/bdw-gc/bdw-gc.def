BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=8
export APPVER_MIN=2
export APPVER_REV=2
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}"
export APPNAME="bdw-gc"
export APPFILE="gc-${APPVER}.tar.gz"
export APPURL="https://www.hboehm.info/gc/gc_source/${APPFILE}"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/dev"
export CC="$(which gcc)"
export CXX="$(which g++)"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
if [ ! -d ${SRCDIR}/${APPNAME}-src ]; then
    mkdir -p ${SRCDIR}/${APPNAME}-src
fi
rm -rf \
  ${SRCDIR}/${APPNAME}-src/* && \
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar \
  --strip 1 \
  -C ${SRCDIR}/${APPNAME}-src \
  -xf ${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-src && \
./configure \
  --prefix=${APPROOT} \
  --enable-static \
  --enable-shared \
  --enable-threads=posix \
  --enable-cplusplus \
  --enable-mmap \
  --enable-handle-fork=yes \
  --enable-large-config && \
make \
  -j$(nproc) && \
make \
  install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src \
  ${SRCDIR}/${APPFILE}
