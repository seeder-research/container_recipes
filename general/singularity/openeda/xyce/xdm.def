BootStrap: localimage
From: pre.sif

%post
. /etc/profile
module load \
  bison \
  flex \
  openmpi \
  boost
export XDMVER_MAJ=2
export XDMVER_MIN=5
export XDMVER_PATCH=0
export XDMVER=${XDMVER_MAJ}.${XDMVER_MIN}.${XDMVER_PATCH}
export XDMURL="https://github.com/Xyce/XDM"
if [ ! -d /opt/builddir ]; then
  mkdir /opt/builddir
fi
cd /opt && \
git clone ${XDMURL} -b Release-${XDMVER} && \
sed -i "s/(isnan/(std::isnan/g" \
  /opt/XDM/src/c_boost/expr/ast_common.hpp && \
cd /opt/builddir && \
cmake \
  -DCMAKE_INSTALL_PREFIX=/usr/local/xdm/${XDMVER} \
  -DCMAKE_BUILD_TYPE="Release" \
  -DCMAKE_CXX_COMPILER="/usr/bin/g++" \
  -DCMAKE_C_COMPILER="/usr/bin/gcc" \
  -DCMAKE_CXX_FLAGS="-O3 -fPIC" \
  -DPYINSTALLER_PATH="/usr/local/openeda/pythonlibs/bin/pyinstaller" \
  -DBOOST_ROOT=${LIBBOOST_ROOT} \
  /opt/XDM && \
cmake --build . -j$(nproc) -t install && \
cd /opt && \
rm -rf \
  /opt/builddir \
  /opt/XDM
