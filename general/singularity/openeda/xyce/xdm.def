BootStrap: localimage
From: pre.sif

%post
. /etc/profile
module load \
  bison \
  flex \
  openmpi \
  boost
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=5
export APPVER_PATCH=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/Xyce/XDM"
export APPNAME="xdm"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d /opt/builddir ]; then
  mkdir /opt/builddir
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b Release-${APPVER} \
  /opt/${APPNAME} && \
sed -i "s/(isnan/(std::isnan/g" \
  /opt/${APPNAME}/src/c_boost/expr/ast_common.hpp && \
cd /opt/builddir && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE="Release" \
  -DCMAKE_CXX_COMPILER="/usr/bin/g++" \
  -DCMAKE_C_COMPILER="/usr/bin/gcc" \
  -DCMAKE_CXX_FLAGS="-O3 -fPIC" \
  -DPYINSTALLER_PATH="${HOME_BASE}/pythonlibs/bin/pyinstaller" \
  -DBOOST_ROOT=${LIBBOOST_ROOT} \
  /opt/${APPNAME} && \
cmake \
  --build . \
  -j$(nproc) \
  -t install && \
cd /opt && \
rm -rf \
  /opt/builddir \
  /opt/${APPNAME}
