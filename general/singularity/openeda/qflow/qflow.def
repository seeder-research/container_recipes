BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=1
export APPVER_MIN=4
export APPVER_REV=98
export APPVER=${APPVER_MAJ}.${APPVER_MIN}
export APPURL="https://github.com/RTimothyEdwards/qflow"
export APPNAME="qflow"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  bison \
  flex \
  cudd \
  yosys \
  opensta \
  magic \
  netgen \
  graywolf \
  qrouter \
  opentimer \
  replace
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/${APPNAME}-src && \
./configure \
  --prefix=${APPROOT} \
  --with-magic=${MAGIC_ROOT}/bin/magic \
  --with-replace=${REPLACE_ROOT}/bin/RePlAce && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src
