BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=1
export APPVER_MIN=4
export APPVER_PATCH=98
export APPVER=${APPVER_MAJ}.${APPVER_MIN}
export APPURL="https://github.com/RTimothyEdwards/qflow"
export APPNAME="qflow"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
module load \
  bison \
  flex \
  cudd \
  yosys \
  opensta \
  magic \
  netgen \
  graywolf \
  qrouter \
  opentimer \
  replace
cd /opt && \
git clone --recursive \
  ${APPURL} \
  /opt/${APPNAME} && \
cd /opt/${APPNAME} && \
./configure \
  --prefix=${APPROOT} \
  --with-magic=${MAGIC_ROOT}/bin/magic \
  --with-replace=${REPLACE_ROOT}/bin/RePlAce && \
make -j$(nproc) && \
make install && \
cd /opt && \
rm -rf \
  /opt/${APPNAME}
