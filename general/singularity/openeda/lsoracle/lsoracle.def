BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
module load \
  boost \
  opensta \
  berkeley-abc
export HOME_BASE="/usr/local"
export APPVER="latest"
export APPURL="https://github.com/lnis-uofu/LSOracle"
export APPNAME="lsoracle"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
export YOSYSURL="https://github.com/YosysHQ/yosys"
export YOSYS_VER="yosys-0.22"
export YOSYS_ROOT="${SRCDIR}/yosys-src"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
if [ ! -d ${SRCDIR}/builddir ]; then
  mkdir ${SRCDIR}/builddir
fi
rm -rf \
  ${SRCDIR}/builddir/* && \
cd ${SRCDIR} && \
git clone \
  --recursive ${YOSYSURL} \
  -b ${YOSYS_VER} \
  ${YOSYS_ROOT} && \
git clone \
  --recursive ${APPURL} \
  ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/builddir && \
cmake \
  -B ${SRCDIR}/builddir \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_CXX_COMPILER="$(which g++)" \
  -DCMAKE_C_COMPILER="$(which gcc)" \
  -DCMAKE_BUILD_TYPE="Release" \
  -DYOSYS_PLUGIN=ON \
  -DYOSYS_INCLUDE_DIR=${YOSYS_ROOT} \
  -DLOCAL_BOOST=OFF \
  -DENABLE_LIBABC=ON \
  -DENABLE_ABC=ON \
  -DENABLE_OPENSTA=ON \
  ${SRCDIR}/${APPNAME}-src && \
cmake --build . \
  -j$(nproc) \
  -t install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src \
  ${SRCDIR}/builddir
