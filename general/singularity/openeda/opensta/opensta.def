BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=2
export APPVER_REV=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPURL="https://github.com/The-OpenROAD-Project/OpenSTA"
export APPNAME="opensta"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  bison \
  cudd \
  flex
if [ ! -d ${SRCDIR}/builddir ]; then
  mkdir -p ${SRCDIR}/builddir
fi
rm -rf \
  ${SRCDIR}/builddir/* && \
cd ${SRCDIR} && \
git clone --recursive ${APPURL} \
  -b v${APPVER} \
  ${SRCDIR}/${APPNAME}-src && \
sed -i "s/SWIG REQUIRED 3.0/SWIG REQUIRED/g" \
  ${SRCDIR}/${APPNAME}/CMakeLists.txt && \
cd ${SRCDIR}/builddir && \
cmake \
  -B ${SRCDIR}/builddir \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_CXX_COMPILER="$(which g++)" \
  -DCMAKE_C_COMPILER="$(which gcc)" \
  -DCMAKE_BUILD_TYPE="Release" \
  -DUSE_CUDD=ON \
  -DCUDD_ROOT=${CUDD_ROOT} \
  ${SRCDIR}/${APPNAME}-src && \
cmake \
  --build ${SRCDIR}/builddir \
  -j$(nproc) \
  --target install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src \
  ${SRCDIR}/builddir
