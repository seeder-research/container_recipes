BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=2
export APPVER_PATCH=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/The-OpenROAD-Project/OpenSTA"
export APPNAME="opensta"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
module load \
  bison \
  cudd \
  flex
if [ ! -d /opt/builddir ]; then
  mkdir -p /opt/builddir
fi
cd /opt && \
git clone --recursive ${APPURL} \
  -b v${APPVER} \
  /opt/${APPNAME} && \
sed -i "s/SWIG REQUIRED 3.0/SWIG REQUIRED/g" \
  /opt/OpenSTA/CMakeLists.txt && \
cd /opt/builddir && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_CXX_COMPILER="/usr/bin/g++" \
  -DCMAKE_C_COMPILER="/usr/bin/gcc" \
  -DCMAKE_BUILD_TYPE="Release" \
  -DUSE_CUDD=ON \
  -DCUDD_ROOT=${CUDD_ROOT} \
  /opt/${APPNAME}/. && \
cmake --build . -j$(nproc) -t install && \
cd /opt && \
mv /opt/modfile \
  ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} && \
cd ${HOME_BASE}/modulefiles/${APPNAME} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${APPVER}" >> .version && \
rm -rf \
  /opt/${APPNAME} \
  /opt/builddir
