BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=0
export APPVER_MIN=22
export APPVER=${APPVER_MAJ}.${APPVER_MIN}
export APPURL="https://github.com/YosysHQ/yosys"
export APPNAME="yosys"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export PREFIX=${APPROOT}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
module load \
  bison \
  flex
if [ ! -d /opt/builddir ]; then
  mkdir -p /opt/builddir
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b ${APPNAME}-${APPVER} \
  /opt/${APPNAME} && \
cd /opt/builddir && \
make -f \
  /opt/${APPNAME}/Makefile \
  config-gcc && \
make \
  -f /opt/${APPNAME}/Makefile \
  -j$(nproc) \
  install && \
cd /opt && \
mv /opt/modfile \
  ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} && \
cd ${HOME_BASE}/modulefiles/${APPNAME} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${APPVER}" >> .version && \
rm -rf \
  /opt/${APPNAME} \
  /opt/builddir
