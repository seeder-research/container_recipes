BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER="f109fa3d4c56fe33bc626c298e04d45ae510dd0e"
export APPURL="https://github.com/YosysHQ/yosys"
export APPNAME="yosys"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
export PREFIX="${APPROOT}"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  bison \
  flex
if [ ! -d ${SRCDIR}/builddir ]; then
  mkdir -p ${SRCDIR}/builddir
fi
cd ${SRCDIR} && \
git clone \
  ${APPURL} \
  ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/builddir && \
make -f \
  ${SRCDIR}/${APPNAME}-src/Makefile \
  config-gcc && \
make \
  -f ${SRCDIR}/${APPNAME}-src/Makefile \
  -j$(nproc) && \
make \
  -f ${SRCDIR}/${APPNAME}-src/Makefile \
  install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src \
  ${SRCDIR}/builddir
