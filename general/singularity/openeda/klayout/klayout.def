BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=0
export APPVER_MIN=27
export APPVER_PATCH=11
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/klayout/klayout"
export APPNAME="klayout"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${APPROOT} ]; then
  mkdir -p ${APPROOT}
fi
if [ ! -d /opt/builddir ]; then
  mkdir /opt/builddir
fi
rm -rf \
  /opt/builddir/*
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
    mv /opt/modfile \
      ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
    echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b v${APPVER} \
  /opt/${APPNAME} && \
cd /opt/${APPNAME} && \
./build.sh \
  -qmake "$(which qmake) -spec linux-g++" \
  -ruby "$(which ruby)" \
  -release \
  -prefix "${APPROOT}/bin" \
  -build "/opt/builddir" && \
cd ${APPROOT} && \
mkdir -p ${APPROOT}/lib && \
mv ${APPROOT}/pymod \
  ${APPROOT}/lib/python && \
mv ${APPROOT}/bin/lib* \
  ${APPROOT}/lib/. && \
mv ${APPROOT}/bin/*_plugins \
  ${APPROOT}/lib/. && \
rm -rfv \
  /opt/${APPNAME} \
  /opt/builddir
