BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=0
export APPVER_MIN=28
export APPVER_PATCH=2
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/klayout/klayout"
export APPNAME="klayout"
export SRCDIR="/opt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export MODDIR="/usr/local/modulefiles/openeda"
if [ ! -d ${APPROOT} ]; then
  mkdir -p ${APPROOT}
fi
if [ ! -d ${SRCDIR}/builddir ]; then
  mkdir ${SRCDIR}/builddir
fi
rm -rf \
  ${SRCDIR}/builddir/*
if [ ! -d ${MODDIR}/${APPNAME} ]; then
  mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
  if [ -f ${SRCDIR}/modfile ]; then
    mv ${SRCDIR}/modfile \
      ${MODDIR}/${APPNAME}/${APPVER}
  fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  -b v${APPVER} \
  ${SRCDIR}/${APPNAME} && \
cd ${SRCDIR}/${APPNAME} && \
./build.sh \
  -qmake "$(which qmake) -spec linux-g++" \
  -ruby "$(which ruby)" \
  -release \
  -prefix "${APPROOT}/bin" \
  -build "${SRCDIR}/builddir" && \
cd ${APPROOT} && \
mkdir -p ${APPROOT}/lib && \
mv ${APPROOT}/bin/pymod \
  ${APPROOT}/lib/python && \
mv ${APPROOT}/bin/lib* \
  ${APPROOT}/lib/. && \
mv ${APPROOT}/bin/*_plugins \
  ${APPROOT}/lib/. && \
rm -rfv \
  ${SRCDIR}/${APPNAME} \
  ${SRCDIR}/builddir
