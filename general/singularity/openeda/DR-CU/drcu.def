BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export HOME_BASE="/usr/local"
export APPNAME="drcu"
export APPVER="427b4a4f03bb98d8a78b1712fe9e52cfb83a8347"
export APPURL="https://github.com/cuhk-eda/dr-cu"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/openeda"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  boost
cd ${SRCDIR} && \
git clone \
  --depth=1 \
  ${APPURL} \
  ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/${APPNAME}-src && \
git submodule update --init --recursive && \
python \
  ${SRCDIR}/${APPNAME}-src/scripts/build.py \
  -o release \
  -t ispd19dr && \
mkdir -p ${APPROOT}/bin && \
cp -a \
  ${SRCDIR}/${APPNAME}-src/run/ispd19dr \
  ${APPROOT}/bin/drcu && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src
