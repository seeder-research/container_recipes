BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=8
export APPVER_MIN=3
export APPVER_PATCH=315
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/RTimothyEdwards/magic"
export APPNAME="magic"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b ${APPVER} && \
cd /opt/${APPNAME} && \
./configure \
  --prefix=${APPROOT} && \
make -j$(nproc) && \
make install && \
cd ${HOME_BASE}/modulefiles/${APPNAME} && \
mv /opt/modfile \
  ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${APPVER}" >> .version && \
rm -rf \
  /opt/${APPNAME}
