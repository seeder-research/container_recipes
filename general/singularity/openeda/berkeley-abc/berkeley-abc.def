BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export ABC_USE_PIC=1
export HOME_BASE="/usr/local"
export APPNAME="berkeley-abc"
export APPVER="latest"
export APPURL="https://github.com/berkeley-abc/abc"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
if [ ! -d ${APPROOT} ]; then
  mkdir -p ${APPROOT}
  cd ${APPROOT} && \
  git clone \
    --recursive ${ABCURL} \
    ${APPROOT}/src && \
  mkdir -p ${APPROOT}/bin && \
  mkdir -p ${APPROOT}/lib && \
  cd ${APPROOT}/src && \
  make -j$(nproc) && \
  make -j${nproc} libabc.so && \
  make -j${nproc} libabc.a && \
  mv abc ${APPROOT}/bin/. && \
  mv libabc.so ${APPROOT}/lib/. && \
  mv libabc.a ${APPROOT}/lib/. && \
  make clean
fi
