BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export ABC_USE_PIC=1
export HOME_BASE="/usr/local"
export APPNAME="berkeley-abc"
export APPVER="latest"
export APPURL="https://github.com/berkeley-abc/abc"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
if [ ! -d ${APPROOT} ]; then
  mkdir -p ${APPROOT}
  cd ${APPROOT} && \
  git clone --recursive ${ABCURL} ./src && \
  mkdir -p ${APPROOT}/bin && \
  mkdir -p ${APPROOT}/lib && \
  cd ${APPROOT}/src && \
  make -j$(nproc) && \
  make -j${nproc} libabc.so && \
  make -j${nproc} libabc.a && \
  mv abc ${APPROOT}/bin/. && \
  mv libabc.so ${APPROOT}/lib/. && \
  mv libabc.a ${APPROOT}/lib/. && \
  make clean
fi

if [ -f /opt/modfile ]; then
  rm -rf /opt/modfile
fi
