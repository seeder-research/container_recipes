BootStrap: localimage
From: pre.sif

%files
modfile                 /opt
simple_update.py        /opt
update_install_dir.py   /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=0
export APPVER_PATCH=0
export APPVER="latest"
export APPURL="https://github.com/The-OpenROAD-Project/OpenLane"
export APPNAME="openlane"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/openeda"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
  mkdir ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
  if [ -f ${SRCDIR}/modfile ]; then
  mv ${SRCDIR}/modfile \
    ${MODDIR}/${APPNAME}/${APPVER}
  fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
  echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  ${SRCDIR}/${APPNAME} && \
cd ${SRCDIR}/${APPNAME} && \
mv ${SRCDIR}/simple_update.py \
  ${SRCDIR}/${APPNAME} && \
mv ${SRCDIR}/update_install_dir.py \
  ${SRCDIR}/${APPNAME}/dependencies && \
python3 simple_update.py && \
mkdir -pv \
  ${APPROOT} && \
cp -r \
  ${SRCDIR}/${APPNAME}/configuration \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/dependencies \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/designs \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/install \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/regression_results \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/scripts \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/AUTHORS.md \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/env.py \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/flow.tcl \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/LICENSE \
  ${APPROOT}/. && \
cp -r \
  ${SRCDIR}/${APPNAME}/run_designs.py \
  ${APPROOT}/. && \
find \
  ${APPROOT} \
  -type d \
  -name runs \
  -exec rm -rf {} + && \
rm -rf \
  ${SRCDIR}/${APPNAME} \
  ${SRCDIR}/${APPNAME}

if [ -f ${SRCDIR}/modfile ]; then
  rm -rf \
    ${SRCDIR}/modfile
fi
