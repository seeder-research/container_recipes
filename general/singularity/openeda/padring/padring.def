BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export HOME_BASE="/usr/local"
export APPVER=latest
export APPURL="https://github.com/donn/padring"
export APPNAME="padring"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${APPROOT} ]; then
  mkdir -p ${APPROOT}
  if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
    mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
  fi
  cd /opt && \
  git clone --recursive \
    ${APPURL} \
    /opt/${APPNAME} && \
  mkdir -p ${APPROOT}/bin && \
  cd /opt/${APPNAME} && \
  bash ./bootstrap.sh && \
  cd /opt/${APPNAME}/build && \
  ninja clean && \
  ninja && \
  mv ${APPNAME} ${APPROOT}/bin/. && \
  cd ${HOME_BASE}/modulefiles/${APPNAME} && \
  echo "#%Module" > .version && \
  echo set ModulesVersion "${APPVER}" >> .version && \
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} && \
  rm -rf \
    /opt/${APPNAME}
fi

if [ -f /opt/modfile ]; then
  rm -rf /opt/modfile
fi
