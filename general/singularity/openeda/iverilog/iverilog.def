BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=11
export APPVER_MIN=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}
export APPURL="https://github.com/steveicarus/iverilog"
export APPNAME="iverilog"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
module load \
  bison \
  flex
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b v${APPVER_MAJ}_${APPVER_MIN} && \
cd /opt/${APPNAME} && \
git checkout \
  --track \
  -b v11-branch \
  origin/v11-branch && \
sh autoconf.sh && \
./configure \
  --prefix=${APPROOT} && \
make -j$(nproc) && \
make install && \
rm -rf \
  /opt/${APPNAME}
