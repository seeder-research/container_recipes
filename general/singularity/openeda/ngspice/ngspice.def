BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
. /.singularity.d/env/90-environment.sh
export HOME_BASE="/usr/local"
export APPVER=37
export APPURL="http://git.code.sf.net/p/ngspice/ngspice"
export APPNAME="ngspice"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
    mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
module load \
  bison \
  flex \
  adms \
  intel/mkl && \
cd /opt && \
git clone \
  --recursive \
  ${APPURL} \
  -b ${APPNAME}-${APPVER} \
  ${APPNAME} && \
cd /opt/${APPNAME} && \
./autogen.sh --adms && \
./configure \
  --prefix=${APPROOT} \
  --enable-xspice \
  --enable-cider \
  --enable-adms \
  --enable-pss \
  --enable-ndev \
  --enable-shared \
  --enable-static \
  --disable-debug \
  --disable-maintainer-mode \
  --with-editline=yes \
  --with-fftw3=yes \
  --with-x=yes \
  CFLAGS="-m64 -O2 -I${MKLROOT}/include" \
  LDFLAGS="-m64 -s -L${MKLROOT}/lib/intel64 -L/usr/lib/x86_64-linux-gnu -Wl,--no-as-needed -lmkl_cdft_core -lmkl_intel_lp64 -lmkl_gnu_thread -lmkl_core -lgomp -Wl,--as-needed -lpthread -lm -ldl" && \
make clean && \
make -j$(nproc) install && \
cd /opt && \
rm -rf \
  /opt/${APPNAME} \
  /opt/${APPVER}
