BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER="latest"
export APPURL="https://github.com/The-OpenROAD-Project/OpenDB.git"
export APPNAME="opendb"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
module load \
  bison \
  flex \
  boost
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
    mkdir -p ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  /opt/${APPNAME} && \
mkdir -p /opt/${APPNAME}/build && \
cd /opt/${APPNAME}/build && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_CXX_COMPILER="/usr/bin/g++" \
  -DCMAKE_C_COMPILER="/usr/bin/gcc" \
  -DCMAKE_BUILD_TYPE="Release" \
  /opt/${APPNAME} && \
cmake --build . \
  -j$(nproc) \
  -t install && \
cd ${HOME_BASE}/modulefiles/${APPNAME} && \
rm -rf \
  /opt/${APPNAME}
