BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=1
export APPVER_MIN=4
export APPVER=${APPVER_MAJ}.${APPVER_MIN}
export APPURL="https://github.com/RTimothyEdwards/qrouter"
export APPNAME="qrouter"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
unset LD_RUN_PATH
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
cd /opt && \
git clone --recursive \
  ${APPURL} \
  /opt/${APPNAME} && \
cd /opt/${APPNAME} && \
./configure \
  --prefix=${APPROOT} && \
make -j$(nproc) install && \
cd /opt && \
mv /opt/modfile \
  ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} && \
cd ${HOME_BASE}/modulefiles/${APPNAME} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${APPVER}" >> .version && \
rm -rf \
  /opt/${APPNAME}
