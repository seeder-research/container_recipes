BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER="df85a637e83da870129c93c8793cad282bb8ddd1"
export APPURL="https://github.com/d-m-bailey/cvc"
export APPNAME="cvc"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/openeda"
export PREFIX=${APPROOT}
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  bison \
  flex
cd ${SRCDIR} && \
git clone \
  ${APPURL} \
  ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/${APPNAME}-src && \
git checkout ${APPVER} && \
git submodule update --init && \
autoreconf -vif && \
autoconf && \
./configure \
  --disable-nls \
  --prefix=${APPROOT} && \
sed -i 's/api.parser.class/parser_class_name/' src/cdlParser.yy && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src
