BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=1
export APPVER_MIN=1
export APPVER_PATCH=3
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://github.com/d-m-bailey/cvc/archive/refs/tags/v${APPVER}.tar.gz"
export APPNAME="cvc"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export PREFIX=${APPROOT}
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
module load \
  bison \
  flex
cd /opt && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf /opt/v${APPVER}.tar.gz && \
cd /opt/${APPNAME}-${APPVER} && \
autoreconf -vif && \
autoconf && \
./configure \
  --disable-nls \
  --prefix=${APPROOT} && \
sed -i 's/api.parser.class/parser_class_name/' src/cdlParser.yy && \
make -j$(nproc) && \
make install && \
cd /opt && \
rm -rf \
  /opt/${APPNAME}-${APPVER} \
  /opt/v${APPVER}.tar.gz
