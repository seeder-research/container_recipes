BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=3
export APPVER_PATCH=3
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPNAME="systemc"
export APPURL="https://www.accellera.org/images/downloads/standards/systemc/systemc-${APPVER}.tar.gz"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export APP_INCLUDE=${APPROOT}/include
export APP_LIBDIR=${APPROOT}/lib
if [ ! -d ${HOME_BASE}/modulefiles/${APPNAME} ]; then
  mkdir ${HOME_BASE}/modulefiles/${APPNAME}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER} ]; then
  mv /opt/modfile \
    ${HOME_BASE}/modulefiles/${APPNAME}/${APPVER}
fi
if [ ! -f ${HOME_BASE}/modulefiles/${APPNAME}/.version ]; then
  echo "#%Module" > ${HOME_BASE}/modulefiles/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${HOME_BASE}/modulefiles/${APPNAME}/.version
fi
cd /opt && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf /opt/${APPNAME}-${APPVER}.tar.gz && \
mkdir -p /opt/${APPNAME}-${APPVER}/builddir
cd /opt/${APPNAME}-${APPVER}/builddir && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_CXX_COMPILER="/usr/bin/g++" \
  -DCMAKE_C_COMPILER="/usr/bin/gcc" \
  -DCMAKE_BUILD_TYPE="Release" \
  -DBUILD_SHARED_LIBS=TRUE \
  -DCMAKE_CXX_STANDARD="14" \
  -DENABLE_PTHREADS=ON \
  /opt/${APPNAME}-${APPVER}/. && \
cmake \
  --build . \
  -j$(nproc) \
  -t install && \
cd /opt && \
rm -rf \
  /opt/${APPNAME}-${APPVER} \
  /opt/${APPNAME}-${APPVER}.tar.gz
