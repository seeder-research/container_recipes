BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=4
export APPVER_MIN=5
export APPVER_REV=0
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}"
export APPNAME="tiff"
export APPFILE="${APPNAME}-${APPVER}.tar.xz"
export APPURL="http://download.osgeo.org/lib${APPNAME}/${APPFILE}"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/lib${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/dev"
export CC="$(which gcc)"
export CXX="$(which g++)"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-cxx && \
make \
  -j$(nproc) && \
make \
  install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
  ${SRCDIR}/${APPFILE}
