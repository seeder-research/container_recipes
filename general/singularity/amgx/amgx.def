BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=1
export APPVER_PATCH=0
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}"
export APPNAME="amgx"
export APPFILE="v${APPVER}.tar.gz"
export APPURL="https://github.com/NVIDIA/AMGX/archive/${APPFILE}"
export SRCDIR="/opt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
  mkdir ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
  mv ${SRCDIR}/modfile \
    ${MODDIR}/${APPNAME}/${APPVER}
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
  echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
module load \
  intel/mkl
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${SRCDIR}/${APPFILE} && \
mkdir ${SRCDIR}/AMGX-${AMGX_VER}/builddir && \
cd ${SRCDIR}/AMGX-${AMGX_VER}/builddir && \
cmake \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_NO_MPI=ON \
  -DMKL_ROOT_DIR=${MKLROOT} \
  -DAMGX_NO_RPATH=ON \
  .. && \
make -j$(nproc) && \
make install && \
rm -rf \
  ${SRCDIR}/v${AMGX_VER}.tar.gz \
  ${SRCDIR}/AMGX-${AMGX_VER}
