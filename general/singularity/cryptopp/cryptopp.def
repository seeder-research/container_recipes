BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=8
export APPVER_MIN=7
export APPVER_REV=0
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}"
export APPURL="https://github.com/weidai11/cryptopp"
export APPNAME="cryptopp"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/dev"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
  rm -f ${SRCDIR}/modfile
fi
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  -b CRYPTOPP_${APPVER_MAJ}_${APPVER_MIN}_${APPVER_REV} \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
make \
  -j$(nproc) \
  libcryptopp.a && \
make \
  -j$(nproc) \
  libcryptopp.so && \
make \
  -j$(nproc) \
  install \
  PREFIX=${APPROOT} \
  CC=$(which gcc) \
  CXX=$(which g++) && \
mkdir -p ${APPROOT}/lib && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-${APPVER}
