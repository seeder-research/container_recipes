BootStrap: localimage
From: pre.sif

%files
modfile         /opt
Makefile.inc    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=5
export APPVER_MIN=3
export APPVER_PATCH=1
export APPVER="${APPVER_MAJOR}.${APPVER_MINOR}.${APPVER_REV}"
export APPNAME="mumps"
export APPFILE="MUMPS_${APPVER}.tar.gz"
export APPURL="http://mumps.enseeiht.fr/${APPFILE}"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
module load \
  openmpi \
  intel/mkl \
  metis \
  parmetis \
  scotch
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
mkdir ${SRCDIR}/${APPNAME}-src && \
cd ${SRCDIR}/${APPNAME}-src && \
tar \
  --strip 1 \
  -C ${APPNAME}-src \
  -xf \
  ${SRCDIR}/${APPFILE} && \
cd ${APPNAME}-src && \
mv ${SRCDIR}/Makefile.inc ./ && \
make alllib libseqneeded && \
mkdir -p ${APPROOT} && \
cp -a \
  ${SRCDIR}/${APPNAME}-src/include \
  ${APPROOT}/include && \
cp -a \
  ${SRCDIR}/${APPNAME}-src/lib \
  ${APPROOT}/lib && \
cp -a \
  ${SRCDIR}/${APPNAME}-src/libseq/libmpiseq* \
  ${APPROOT}/lib/. && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-src \
  ${SRCDIR}/${APPFILE}
