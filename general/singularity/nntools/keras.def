BootStrap: localimage
From: pre.sif

%files
    build_keras.sh    /opt

%appenv keras
export CONDA_DIR=/opt/conda-keras
export PATH=${CONDA_DIR}/bin:$PATH

%post
/bin/bash /opt/build_keras.sh
if [ -e /opt/Miniconda2-latest-Linux-x86_64.sh ]; then
    rm -f /opt/Miniconda2-latest-Linux-x86_64.sh
fi
rm -f /opt/build_*.sh
