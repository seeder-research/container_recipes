BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE=/usr/local
export APPSDIR=${HOME_BASE}/libraries
export APPVER_MAJ=1
export APPVER_MIN=12
export APPVER_REV=3
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPNAME=pnetcdf
export APPURL="https://github.com/Parallel-NetCDF/PnetCDF.git"
export APPROOT=${APPSDIR}/${APPNAME}/${APPVER}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/dev
export MPICC=mpicc
export MPICXX=mpic++
export MPIFC=mpifort
export MPIF77=mpifort
export MPIF90=mpifort
if [ ! -d ${MOD_BASE}/${APPNAME} ]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    if [ -f ${MOD_DIR}/modfile ]; then
        mv ${MOD_DIR}/modfile \
            ${MOD_BASE}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
if [ -f ${MOD_DIR}/modfile ]; then
  rm -f ${MOD_DIR}/modfile
fi
module load \
  openmpi \
  hdf5
cd ${MOD_DIR} && \
git clone \
  --recursive \
  ${APPURL} \
  -b checkpoint.${APPVER} \
  ${MOD_DIR}/${APPNAME}-${APPVER} && \
cd ${MOD_DIR}/${APPNAME}-${APPVER} && \
autoreconf -fvi && \
./configure \
  --prefix=${APPROOT} \
  --enable-fortran=yes \
  --enable-cxx=yes \
  --enable-static=yes \
  --enable-shared=yes && \
make -j$(nproc) && \
make install && \
cd ${MOD_DIR} && \
rm -rf \
  ${MOD_DIR}/${APPNAME}-${APPVER}
