BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile.d/modules.sh
module load \
  bison \
  flex \
  llvm \
  ruby
export HOME_BASE="/usr/local"
export APPVER_MAJ=5
export APPVER_MIN=15
export APPVER_REV=6
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPURL="https://code.qt.io/qt/qt5.git"
export APPNAME="qt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export OPENSSL_LIB="-L/usr/lib/x86_64-linux-gnu -lssl -lcrypto"
export CC="$(which clang)"
export CXX="$(which clang++)"
if [ ! -d /usr/local/modulefiles/dev/${APPNAME}]; then
    mkdir -p /usr/local/modulefiles/dev/${APPNAME}
fi
if [ ! -f /usr/local/modulefiles/dev/${APPNAME}/${APPVER} ]; then
    mv /opt/modfile \
      /usr/local/modulefiles/dev/${APPNAME}/${APPVER}
fi
if [ ! -f /usr/local/modulefiles/dev/${APPNAME}/.version ]; then
    echo "#%Module" > /usr/local/modulefiles/dev/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> /usr/local/modulefiles/dev/${APPNAME}/.version
fi
cd /opt && \
git clone --recursive \
  -j 8 \
  ${APPURL} \
  -b v${APPVER} \
  /opt/qt-src && \
mkdir /opt/qt-build && \
cd /opt/qt-build && \
/opt/qt-src/configure \
  -prefix ${APPROOT} \
  -platform "linux-clang" \
  -linker "lld" \
  -confirm-license \
  -opensource \
  -release \
  -silent \
  -nomake examples \
  -nomake tests \
  -no-rpath \
  -syslog \
  -bundled-xcb-xinput \
  -xkbcommon \
  -skip qtandroidextras \
  -skip qtconnectivity \
  -skip qtgamepad \
  -skip qtlocation \
  -skip qtmacextras \
  -skip qtpurchasing \
  -skip qtsensors \
  -skip qtwebengine \
  -skip qtwinextras && \
gmake && \
gmake install && \
cd /opt && \
rm -rfv \
  /opt/qt*
