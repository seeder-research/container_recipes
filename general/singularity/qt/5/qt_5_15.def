BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile.d/modules.sh
module load \
  bison \
  flex
export HOME_BASE="/usr/local"
export APPVER_MAJ=5
export APPVER_MIN=15
export APPVER_REV=2
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPURL="https://code.qt.io/qt/qt5.git"
export APPNAME="qt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
mkdir -p /usr/local/modulefiles/dev/${APPNAME} && \
cd /usr/local/modulefiles/dev/${APPNAME} && \
mv /opt/modfile \
  /usr/local/modulefiles/dev/${APPNAME}/${APPVER} && \
echo "#%Module" > /usr/local/modulefiles/dev/${APPNAME}/.version && \
echo set ModulesVersion "${APPVER}" >> /usr/local/modulefiles/dev/${APPNAME}/.version && \
module load ${APPNAME}/${APPVER} && \
cd /opt && \
git clone --recursive \
  -j 8 \
  ${APPURL} \
  -b v${APPVER} \
  /opt/qt-src && \
mkdir /opt/qt-build && \
cd /opt/qt-build && \
sed -i 's@thread/qmutex_linux.cpp@@' /opt/qt-src/qtbase/src/corelib/thread/thread.pri && \
sed -i '/qdbusmarshaller/d' /opt/qt-src/qtbase/src/dbus/dbus.pro && \
/opt/qt-src/configure \
  -prefix ${APPROOT} \
  -platform "linux-g++-64" \
  -confirm-license \
  -opensource \
  -release \
  -silent \
  -nomake examples \
  -nomake tests \
  -no-rpath \
  -syslog \
  -xkbcommon \
  -skip qtandroidextras \
  -skip qtconnectivity \
  -skip qtgamepad \
  -skip qtlocation \
  -skip qtmacextras \
  -skip qtpurchasing \
  -skip qtsensors \
  -skip qtwayland \
  -skip qtwebengine \
  -skip qtwinextras \
  -qt-freetype \
  -qt-harfbuzz \
  -qt-libjpeg \
  -qt-libpng \
  -qt-pcre \
  -qt-xcb && \
make && \
make install && \
cd /opt && \
rm -rf \
  /opt/qt*
