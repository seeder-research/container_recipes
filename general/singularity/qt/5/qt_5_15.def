BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPSDIR=${HOME_BASE}/libraries
export APPVER_MAJ=5
export APPVER_MIN=15
export APPVER_REV=6
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPNAME="qt"
export APPURL="https://code.qt.io/qt/qt5.git"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/dev
export OPENSSL_LIB="-L/usr/lib/x86_64-linux-gnu -lssl -lcrypto"
if [ ! -d ${MOD_BASE}/${APPNAME}]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    mv ${MOD_DIR}/modfile \
      ${MOD_BASE}/${APPNAME}/${APPVER}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
module load \
  bison \
  flex \
  llvm \
  ruby
cd ${APPSDIR}/${APPNAME} && \
git clone --recursive \
  -j 8 \
  ${APPURL} \
  -b v${APPVER} \
  ${APPSDIR}/${APPNAME}/git-src && \
mkdir ${APPSDIR}/${APPNAME}/builddir && \
cd ${APPSDIR}/${APPNAME}/builddir && \
${APPSDIR}/${APPNAME}/git-src/configure \
  -prefix ${APPROOT} \
  -platform "linux-clang" \
  -linker "lld" \
  -confirm-license \
  -opensource \
  -release \
  -silent \
  -nomake examples \
  -nomake tests \
  -no-rpath \
  -syslog \
  -bundled-xcb-xinput \
  -xkbcommon \
  -skip qtandroidextras \
  -skip qtconnectivity \
  -skip qtgamepad \
  -skip qtlocation \
  -skip qtmacextras \
  -skip qtpurchasing \
  -skip qtsensors \
  -skip qtwebengine \
  -skip qtwinextras && \
gmake && \
gmake install && \
cd ${APPSDIR}/${APPNAME} && \
rm -rfv \
  ${APPSDIR}/${APPNAME}/git-src \
  ${APPSDIR}/${APPNAME}/builddir
