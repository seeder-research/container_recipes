BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile.d/modules.sh
module load \
  bison \
  flex
export HOME_BASE="/usr/local"
export APPVER_MAJOR=6
export APPVER_MINOR=2
export APPVER_REV=4
export APPVER=${APPVER_MAJOR}.${APPVER_MINOR}.${APPVER_REV}
export APPURL="https://code.qt.io/qt/qt5.git"
export APPNAME="qt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
mkdir -p /usr/local/modulefiles/dev/${APPNAME} && \
mv /opt/modfile \
  /usr/local/modulefiles/dev/${APPNAME}/${APPVER} && \
echo "#%Module" > /usr/local/modulefiles/dev/${APPNAME}/.version && \
echo set ModulesVersion "${APPVER}" >> /usr/local/modulefiles/dev/${APPNAME}/.version && \
module load ${APPNAME}/${APPVER} && \
cd /opt && \
git clone --recursive \
  ${APPURL} \
  -b v${APPVER} \
  /opt/qt-src && \
mkdir /opt/qt-build && \
cd /opt/qt-build && \
/opt/qt-src/configure \
  -prefix ${APPROOT} \
  -platform "linux-g++-64" \
  -cmake-generator "Unix Makefiles" \
  -confirm-license \
  -opensource \
  -release \
  -silent \
  -nomake examples \
  -nomake tests \
  -no-rpath \
  -no-feature-clang \
  -bundled-xcb-xinput \
  -xkbcommon \
  -skip qtandroidextras \
  -skip qtconnectivity \
  -skip qtgamepad \
  -skip qtlocation \
  -skip qtmacextras \
  -skip qtpurchasing \
  -skip qtsensors \
  -skip qtwayland \
  -skip qtwebengine \
  -skip qtwinextras && \
cmake \
  --build /opt/qt-build \
  -t install && \
cd /opt && \
rm -rf \
  /opt/${APPNAME}*
