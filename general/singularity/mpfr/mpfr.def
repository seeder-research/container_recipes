BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=4
export APPVER_MIN=1
export APPVER_PATCH=1
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPNAME="mpfr"
export APPFILE="${APPNAME}-${APPVER}.tar.xz"
export APPURL="https://www.mpfr.org/${APPNAME}-current/${APPFILE}"
export MPREALURL="https://github.com/advanpix/mpreal"
export MPREALVER="3.6.9"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
export CC=$(which gcc)
export CXX=$(which g++)
if [ ! -d ${MODDIR}/${APPNAME} ]; then
  mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
  mv ${SRCDIR}/modfile \
    ${MODDIR}/${APPNAME}/${APPVER}
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
  echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
  echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${SRCDIR}/${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-thread-safe && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
git clone \
  --recursive \
  ${MPREALURL} \
  -b "mpfrc++-${MPREALVER}" \
  ${SRCDIR}/mpreal && \
cp \
  ${SRCDIR}/mpreal/mpreal.h \
  ${APPROOT}/include/mpreal.h && \
rm -rf \
  ${SRCDIR}/${APPNAME}-${APPVER} \
  ${SRCDIR}/${APPFILE} \
  ${SRCDIR}/mpreal

if [ -e ${SRCDIR}/modfile ]; then
  rm -rf ${SRCDIR}/modfile
fi
