BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE=/usr/local
export APPSDIR=${HOME_BASE}/libraries
export APPVER_MAJ=4
export APPVERC_MIN=9
export APPVERC_REV=0
export APPVERCXX_MIN=3
export APPVERCXX_REV=1
export APPVERFORT_MIN=6
export APPVERFORT_REV=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPNAME=netcdf
export APPCURL="https://github.com/Unidata/${APPNAME}-c/archive/refs/tags/v${APPCVER}.tar.gz"
export APPCXXURL="https://github.com/Unidata/${APPNAME}-cxx4/archive/refs/tags/v${APPCXXVER}.tar.gz"
export APPFORTURL="https://github.com/Unidata/${APPNAME}-fortran/archive/refs/tags/v${APPFORTVER}.tar.gz"
export APPROOT=${APPSDIR}/${APPNAME}/${APPVER_MAJ}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/dev
if [ ! -d ${MOD_BASE}/${APPNAME} ]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    if [ -f ${MOD_DIR}/modfile ]; then
        mv ${MOD_DIR}/modfile \
            ${MOD_BASE}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
if [ -f ${MOD_DIR}/modfile ]; then
  rm -f ${MOD_DIR}/modfile
fi
module load \
  openmpi \
  hdf5 \
  pnetcdf
cd ${MOD_DIR} && \
wget --no-check-certificate \
  ${APPCURL} && \
tar xf ${MOD_DIR}/v${APPCVER}.tar.gz && \
cd ${MOD_DIR}/${APPNAME}-c-${APPCVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-hdf5=yes \
  --enable-dynamic-loading=yes \
  --enable-static=yes \
  --enable-shared=yes \
  --enable-pnetcdf=yes && \
make -j$(nproc) && \
make install && \
rm -rf \
  ${MOD_DIR}/v${APPCVER}.tar.gz \
  ${MOD_DIR}/${APPNAME}-* && \
cd ${MOD_DIR} && \
wget --no-check-certificate \
  ${APPCXXURL} && \
tar xf ${MOD_DIR}/v${APPCXXVER}.tar.gz && \
cd ${MOD_DIR}/${APPNAME}-cxx4-${APPCXXVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-static=yes \
  --enable-shared=yes && \
make -j$(nproc) && \
make install && \
rm -rf \
  ${MOD_DIR}/v${APPCXXVER}.tar.gz \
  ${MOD_DIR}/${APPNAME}-* && \
cd ${MOD_DIR} && \
wget --no-check-certificate \
  ${APPFORTURL} && \
tar xf ${MOD_DIR}/v${APPFORTVER}.tar.gz && \
cd ${MOD_DIR}/${APPNAME}-fortran-${APPFORTVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-static=yes \
  --enable-shared=yes && \
make && \
make install && \
rm -rf \
  ${MOD_DIR}/v${APPFORTVER}.tar.gz \
  ${MOD_DIR}/${APPNAME}-*
