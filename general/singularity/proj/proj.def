BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=9
export APPVER_MIN=1
export APPVER_REV=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPURL="https://github.com/OSGeo/PROJ"
export APPNAME="proj"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/dev"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MODDIR}/${APPNAME}/.version
fi
if [ ! -d ${SRCDIR}/builddir ]; then
    mkdir -p ${SRCDIR}/builddir
else
    rm -rf ${SRCDIR}/builddir && \
    mkdir -p ${SRCDIR}/builddir
fi
if [ -f ${SRCDIR}/modfile ]; then
  rm -f ${SRCDIR}/modfile
fi
module load \
  sqlite3 && \
cd ${SRCDIR} && \
git clone --recursive \
  ${APPURL} \
  -b ${APPVER} \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
cd ${SRCDIR}/builddir && \
cmake \
  -G "Unix Makefiles" \
  -DCMAKE_INSTALL_PREFIX=${APPROOT} \
  -DCMAKE_BUILD_TYPE=Release \
  -DBUILD_APPS=ON \
  -DSQLITE3_INCLUDE_DIR=${SQLITE3_ROOT}/include \
  -DSQLITE3_LIBRARY=${SQLITE3_ROOT}/lib/libsqlite3.so \
  ${SRCDIR}/${APPNAME}-${APPVER} && \
cmake \
  --build . \
  -j$(nproc) \
  -t install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/builddir \
  ${SRCDIR}/${APPNAME}-${APPVER}

if [ -d ${APPROOT}/lib64 ]; then
  if [ ! -e ${APPROOT}/lib ]; then
    cd ${APPROOT} && \
    ln -s ./lib64 lib
  fi
fi
