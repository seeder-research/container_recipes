BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
export HOME_BASE="/usr/local"
export APPVER_MAJ=3
export APPVER_MIN=0
export APPVER_PATCH=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}
export APPURL="https://www.davidkebo.com/source/cudd_versions/cudd-${APPVER}.tar.gz"
export APPNAME="cudd"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
cd /opt && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf \
  /opt/${APPNAME}-${APPVER}.tar.gz && \
cd /opt/${APPNAME}-${APPVER} && \
./configure \
  --prefix=${APPROOT} && \
make -j$(nproc) && \
make install && \
if [ ! -d /usr/local/modulefiles/${APPNAME} ]; then
  mkdir -p /usr/local/modulefiles/${APPNAME}
fi
cd /opt && \
mv /opt/modfile \
  /usr/local/modulefiles/${APPNAME}/${APPVER} && \
echo "#%Module" > /usr/local/modulefiles/${APPNAME}/.version && \
echo set ModulesVersion "${APPVER}" >> /usr/local/modulefiles/${APPNAME}/.version && \
rm -rf \
  /opt/${APPNAME}-${APPVER} \
  /opt/${APPNAME}-${APPVER}.tar.gz
