BootStrap: localimage
From: pre.sif

%files
modfile     /opt

%post
export HOME_BASE=/usr/local
export APPSDIR=${HOME_BASE}/utils
export APPVER_MAJ=2
export APPVER_MIN=6
export APPVER_REV=4
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPNAME=flex
export APPURL="https://github.com/westes/${APPNAME}/files/981163/${APPNAME}-${APPVER}.tar.gz"
export APPROOT=${APPSDIR}/${APPNAME}/${APPVER}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/utils
export CC=$(which gcc)
export CFLAGS="-O3 -fPIC"
export CXX=$(which g++)
export CXXFLAGS="-O3 -fPIC"
if [ ! -d ${MOD_BASE}/${APPNAME} ]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    if [ -f ${MOD_DIR}/modfile ]; then
        mv ${MOD_DIR}/modfile \
            ${MOD_BASE}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
if [ -f ${MOD_DIR}/modfile ]; then
  rm -f ${MOD_DIR}/modfile
fi
module load \
  bison && \
cd ${APPSDIR}/${APPNAME} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER}.tar.gz && \
cd ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} && \
./autogen.sh && \
sed -i "/math.h/a #include <malloc.h>" src/flexdef.h && \
./configure \
  --prefix=${APPROOT} \
  --enable-static \
  --enable-shared && \
make all install && \
rm -rf \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER}.tar.gz
