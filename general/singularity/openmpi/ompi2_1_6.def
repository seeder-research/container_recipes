BootStrap: localimage
From: pre.sif

%files
modfile    /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=1
export APPVER_PATCH=6
export APPVER="${APPVER_MAJOR}.${APPVER_MINOR}.${APPVER_REV}"
export APPNAME="openmpi"
export APPFILE="${APPNAME}-${APPVER}.tar.bz2"
export APPURL="https://download.open-mpi.org/release/open-mpi/v${APPVER_MAJOR}.${APPVER_MINOR}/${APPFILE}"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
export TERM=xterm
module load \
  pbspro && \
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${SRCDIR}/${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
./configure \
  --prefix=${APPROOT} \
  --with-tm=${PBSPROPATH} \
  --with-hwloc=internal \
  --enable-hwloc-pci \
  --enable-mpi-cxx \
  --enable-cxx-exceptions \
  --enable-mpi-fortran \
  --enable-shared \
  --enable-static && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPNAME}-${APPVER} \
  ${SRCDIR}/${APPFILE}
