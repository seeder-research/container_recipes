BootStrap: localimage
From: pre.sif

%files
modfile                /opt

%post
. /etc/profile
export MODULEPATH=/usr/local/modulefiles/dev:/usr/local/modulefiles
export BOOSTVER_MAJOR=1
export BOOSTVER_MINOR=68
export BOOSTVER_PATCH=0
export BOOSTVER=${BOOSTVER_MAJOR}.${BOOSTVER_MINOR}.${BOOSTVER_PATCH}
module load openmpi 
export LD_LIBRARY_PATH=/usr/local/cuda/lib64/stubs:$LD_LIBRARY_PATH
export LIBRARY_PATH=/usr/local/cuda/lib64/stubs:$LIBRARY_PATH
export LD_RUN_PATH=/usr/local/cuda/lib64/stubs:$LD_RUN_PATH
cp /usr/local/cuda/lib64/stubs/libnvidia-ml.so /usr/local/cuda/lib64/stubs/libnvidia-ml.so.1 && \
cd /opt && \
git clone --recursive https://github.com/boostorg/boost.git -b boost-${BOOSTVER} /opt/boost-${BOOSTVER} && \
cd /opt/boost-${BOOSTVER} && \
./bootstrap.sh --with-toolset=gcc && \
echo "using mpi ;" >> user-config.jam && \
./tools/build/src/engine/bjam -j$(nproc) \
  --prefix=/usr/local/boost/${BOOSTVER} \
  --layout=versioned \
  toolset=gcc \
  variant=release \
  link=static \
  threading=multi \
  install
./tools/build/src/engine/bjam -j$(nproc) \
  --prefix=/usr/local/boost/${BOOSTVER} \
  --layout=system \
  toolset=gcc \
  variant=release \
  link=static \
  threading=multi \
  install
./tools/build/src/engine/bjam -j$(nproc) \
  --prefix=/usr/local/boost/${BOOSTVER} \
  --layout=versioned \
  toolset=gcc \
  variant=release \
  link=shared \
  threading=multi \
  install
./tools/build/src/engine/bjam -j$(nproc) \
  --prefix=/usr/local/boost/${BOOSTVER} \
  --layout=system \
  toolset=gcc \
  variant=release \
  link=shared \
  threading=multi \
  install
mkdir /usr/local/modulefiles/dev/boost && \
cd /usr/local/modulefiles/dev/boost && \
mv /opt/modfile \
  /usr/local/modulefiles/dev/boost/${BOOSTVER} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${BOOSTVER}" >> .version && \
cd /opt && \
rm -rf \
  /usr/local/cuda/lib64/stubs/libnvidia-ml.so.1 \
  /opt/boost-${BOOSTVER}
