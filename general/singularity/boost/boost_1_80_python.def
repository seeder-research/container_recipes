BootStrap: localimage
From: pre.sif

%files
modfile                /opt

%post
. /etc/profile
export HOME_BASE=/usr/local
export APPSDIR=${HOME_BASE}/libraries
export APPVER_MAJ=1
export APPVER_MIN=80
export APPVER_REV=0
export APPVER=${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}
export APPNAME=boost
export APPURL="https://github.com/boostorg/${APPNAME}.git"
export APPROOT=${APPSDIR}/${APPNAME}/${APPVER}
export MOD_DIR=/opt
export MOD_BASE=${HOME_BASE}/modulefiles/dev
if [ ! -d ${HOME_BASE}/modulefiles/dev/${APPNAME} ]; then
    mkdir -p ${MOD_BASE}/${APPNAME}
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/${APPVER} ]; then
    if [ -f ${MOD_DIR}/modfile ]; then
        mv ${MOD_DIR}/modfile \
            ${MOD_BASE}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MOD_BASE}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MOD_BASE}/${APPNAME}/.version && \
    echo set ModulesVersion "${APPVER}" >> ${MOD_BASE}/${APPNAME}/.version
fi
if [ -f ${MOD_DIR}/modfile ]; then
  rm -f ${MOD_DIR}/modfile
fi
module load \
  openmpi && \
cd /opt && \
git clone \
  --recursive \
  ${APPURL} \
  -b ${APPNAME}-${APPVER} \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} && \
cd ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER} && \
./bootstrap.sh --with-toolset=gcc && \
echo "using mpi ;" >> project-config.jam && \
echo "using python ;" >> project-config.jam && \
./b2 -j$(nproc) \
  --prefix=${APPROOT} \
  --layout=system \
  toolset=gcc \
  variant=release \
  link=shared,static \
  threading=multi \
  install && \
cd ${APPSDIR}/${APPNAME} && \
rm -rf \
  ${APPSDIR}/${APPNAME}/${APPNAME}-${APPVER}
