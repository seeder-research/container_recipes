BootStrap: localimage
From: pre.sif

%files
modfile        /opt

%post
. /etc/profile
export HOME_BASE="/usr/local/utils"
export APPVER_MAJ=3
export APPVER_MIN=1
export APPVER_REV=2
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_REV}"
export APPNAME="ruby"
export APPFILE="${APPNAME}-${APPVER}.tar.gz"
export APPURL="https://cache.ruby-lang.org/pub/${APPNAME}/${APPVER_MAJ}.${APPVER_MIN}/${APPFILE}"
export SRCDIR="/opt"
export APPROOT="${HOME_BASE}/${APPNAME}/${APPVER}"
export MODDIR="/usr/local/modulefiles/utils"
export CC="$(which gcc-12)"
export CXX="$(which g++-12)"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -pv ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
          ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${SRCDIR}/${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
./configure \
  --prefix=${APPROOT} \
  --enable-shared && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
rm -rfv \
  ${SRCDIR}/${APPFILE} \
  ${SRCDIR}/${APPNAME}-${APPVER}
