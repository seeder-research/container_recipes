BootStrap: localimage
From: pre.sif

%files
modfile                /opt

%post
. /etc/profile
export HOME_BASE="/usr/local"
export APPVER_MAJ=2
export APPVER_MIN=10
export APPVER_PATCH=1
export APPVER="${APPVER_MAJ}.${APPVER_MIN}.${APPVER_PATCH}"
export APPNAME="freetype"
export APPFILE="${APPNAME}-${APPVER}.tar.gz"
export APPURL="https://download.savannah.gnu.org/releases/${APPNAME}/${APPFILE}"
export SRCDIR="/opt"
export APPROOT=${HOME_BASE}/${APPNAME}/${APPVER}
export MODDIR="/usr/local/modulefiles"
if [ ! -d ${MODDIR}/${APPNAME} ]; then
    mkdir -p ${MODDIR}/${APPNAME}
fi
if [ ! -f ${MODDIR}/${APPNAME}/${APPVER} ]; then
    if [ -f ${SRCDIR}/modfile ]; then
        mv ${SRCDIR}/modfile \
            ${MODDIR}/${APPNAME}/${APPVER}
    fi
fi
if [ ! -f ${MODDIR}/${APPNAME}/.version ]; then
    echo "#%Module" > ${MODDIR}/${APPNAME}/.version && \
    echo set ModulesVersion \"${APPVER}\" >> ${MODDIR}/${APPNAME}/.version
fi
if [ -f ${SRCDIR}/modfile ]; then
    rm -f ${SRCDIR}/modfile
fi
cd ${SRCDIR} && \
wget --no-check-certificate \
  ${APPURL} && \
tar xf ${SRCDIR}/${APPFILE} && \
cd ${SRCDIR}/${APPNAME}-${APPVER} && \
./configure \
  --enable-freetype-config \
  --prefix=${APPROOT} && \
make -j$(nproc) && \
make install && \
cd ${SRCDIR} && \
rm -rf \
  ${SRCDIR}/${APPFILE} \
  ${SRCDIR}/${APPNAME}-${APPVER}
