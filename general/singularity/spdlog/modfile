#%Module -*- tcl -*-
##
## modulefile
##
set               name              [file tail [file dirname [info script]]]
set               version           [file tail [info script]]
set               root              /usr/local/${name}/${version}

proc ModulesHelp { } {

  puts stderr "\tAdds ${name} library (version ${version}) path to your environment,"
}

module-whatis "adds ${name} library ${version} to your environment."


setenv              SPDLOG_ROOT       ${root}

prepend-path        CPATH             ${root}/include
prepend-path        INCLUDE_PATH      ${root}/include

prepend-path        LD_LIBRARY_PATH   ${root}/lib64
prepend-path        LIBRARY_PATH      ${root}/lib64
prepend-path        LD_RUN_PATH       ${root}/lib64

prepend-path        PKG_CONFIG_PATH   ${root}/lib64/pkgconfig

prepend-path -d ";" CMAKE_PREFIX_PATH ${root}

prepend-path -d ";" CMAKE_MODULE_PATH ${root}/lib64/cmake/spdlog
